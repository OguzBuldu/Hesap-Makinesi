print("Hesap Makinesi")

sayı1 = int(input("1.Sayıyı Giriniz: "))
sayı2 = int(input("2.Sayıyı Giriniz: "))

print("Yapmak İstediğiniz İşlemi Seçiniz: ")
print("1. Toplama")
print("2. Çıkarma")
print("3. Bölme")
print("4. Çarpma")


secım = input("Seçiminiz (1/2/3/4): ")

if secım == "1":
    print(sayı1 + sayı2)
elif secım == "2 ":
    print(sayı1 - sayı2)
elif secım == "3":
    print(sayı1 / sayı2)
elif secım == "4":
    print(sayı1 * sayı2)
